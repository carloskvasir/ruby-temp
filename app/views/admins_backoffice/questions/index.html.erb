<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista de Questões</h1>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Descrição</th>
    <th scope="col">Assunto</th>
    <th>
      <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-circle" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <th scope="row"><%= question.id %></th>
      <td><%= question.description.truncate(50) %></td>
      <td><%= question.subject.description.truncate(30)  %></td>
      <td style="width: calc(55px * 2);">
        <%= link_to edit_admins_backoffice_question_url(question), :class => "btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>
        <%= link_to admins_backoffice_question_path(question), method: :delete, :class => "btn btn-danger btn-circle", data:{confirm: "Deseja realmente excluir essa pergunta?"} do %>
          <i class="fa fa-minus"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

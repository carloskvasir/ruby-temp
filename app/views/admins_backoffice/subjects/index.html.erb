<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead">
  <tr>
    <th scope="col">#</th>
    <th scope="col"><%= translate_attribute(@subjects, :description) %></th>
    <th>
      <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <th scope="row"><%= subject.id %></th>
      <td><%= subject.description %></td>
      <td style="width: calc(55px * 2);">
        <%= link_to edit_admins_backoffice_subject_url(subject), :class => "btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>
        <%= link_to admins_backoffice_subject_path(subject),
                    method: :delete, :class => "btn btn-danger btn-circle",
                    data:{confirm: t('messages.confirm_with', item: subject.description.truncate(15))} do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @subjects %>
</div>

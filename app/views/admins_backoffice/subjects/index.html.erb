<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista de Assuntos/Áreas</h1>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Descrição</th>
    <th>
      <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <th scope="row"><%= subject.id %></th>
      <td><%= subject.description %></td>
      <td style="width: calc(55px * 2);">
        <%= link_to edit_admins_backoffice_subject_url(subject), :class => "btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>
        <%= link_to admins_backoffice_subject_path(subject), method: :delete, :class => "btn btn-danger btn-circle", data:{confirm: "Deseja realmente excluir esse Assunto/Área?"} do %>
          <i class="fa fa-minus"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

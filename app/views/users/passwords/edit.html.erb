<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <h1>Mude sua senha</h1>

          <div>
            <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
          </div>

          <div >
            <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Repita a senha" %>
          </div>

          <div>
            <%= f.submit "Atualizar minha senha", class:"btn btn-default submit", style:"float: none; margin-left: 0; width: 70%;" %>
          </div>
          <div class="clearfix"></div>
        <% end %>
      </section>

    </div>
  </div>
</div>
